<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qrCodeViewActivity">

    <TextView
        android:id="@+id/starter_qr_message_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rounded_corners_10dp"
        android:backgroundTint="#FFFFFF"
        android:padding="8dp"
        android:text="QRコードを読み込んでもらい\n友達を増やしましょう"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qr_code_view_qr_image_view" />

    <ImageView
        android:id="@+id/qr_code_view_qr_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_weight="1"
        android:background="@drawable/shape_rounded_corners_10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/qr_code_black_24dp" />

    <Button
        android:id="@+id/qr_code_view_finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="閉じる"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starter_qr_message_text_view2" />
</androidx.constraintlayout.widget.ConstraintLayout>